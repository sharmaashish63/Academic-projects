{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "StorageName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
      "Containername": {
        "type": "string",
        "metadata": {
            "description": "description"
        }
      },
      "Sqlservername": {
        "type": "string",
        "metadata": {
            "description": "description"
        }
      },
      "sqladmin": {
        "type": "string",
        "metadata": {
            "description": "description"
        }
      },
      "Password": {
        "type": "string",
        "metadata": {
            "description": "description"
        }
      }
    },
    "functions": [],
    "variables": {},
    "resources": [
 {
    "name": "[parameters('StorageName')]",
    "type": "Microsoft.Storage/storageAccounts",
    "apiVersion": "2023-01-01",
    "tags": {
        "displayName": "[parameters('StorageName')]"
    },
    "location": "[resourceGroup().location]",
    "kind": "StorageV2",
    "sku": {
        "name": "Standard_ZRS",
        "tier": "Standard"
    }
 },
{
    "name": "[format('{0}/default/{1}',parameters('StorageName'),parameters('containername'))]",
    "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
    "apiVersion": "2023-01-01",
    "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('StorageName'))]"
    ],
    "properties": {
        "publicAccess": "None"
    }
},
{
    "name": "[parameters('Sqlservername')]",
    "type": "Microsoft.Sql/servers",
    "apiVersion": "2021-11-01",
    "location": "[resourceGroup().location]",
    "tags": {
        "displayName": "[parameters('Sqlservername')]"
    },
    "properties": {
        "administratorLogin": "[parameters('sqladmin')]",
        "administratorLoginPassword": "[parameters('Password')]"
    },
   "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('StorageName'))]"
   ],
    "resources": [
        {
            "type": "firewallRules",
            "apiVersion": "2014-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('Sqlservername'))]"
            ],
            "location": "[resourceGroup().location]",
            "name": "AllowAllWindowsAzureIps",
            "properties": {
                "startIpAddress": "0.0.0.0",
                "endIpAddress": "0.0.0.0"
            }
        }
    ]
},
{
    "name": "[concat(parameters('Sqlservername'),'/mysqlserver1')]",
    "type": "Microsoft.Sql/servers/databases",
    "apiVersion": "2021-11-01",
    "location": "[resourceGroup().location]",
    "tags": {
        "displayName": "[concat(parameters('Sqlservername'),'/mysqlserver1')]"
    },
    "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('Sqlservername'))]"
    ],
    "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "edition": "Basic",
        "maxSizeBytes": 1073741824,
        "requestedServiceObjectiveName": "Basic"
    }
}
    ],
    "outputs": {}
}